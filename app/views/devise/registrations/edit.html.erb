<%= render 'header' %>

<div class="col-md-offset-1 col-md-8 lgmartop">
  <h2 class="section-heading">Edit <%= resource_name.to_s.humanize %></h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= devise_error_messages! %>

    <div class="field form-group">
      <%= f.label :first_name, class: "control-label" %><br />
      <%= f.text_field :first_name, autofocus: true, class: "form-control" %>
    </div>

    <div class="field form-group">
      <%= f.label :last_name, class: "control-label" %><br />
      <%= f.text_field :last_name, class: "form-control" %>
    </div>

    <div class="field form-group">
      <%= f.label :email, class: "control-label" %><br />
      <%= f.email_field :email, class: "form-control" %>
    </div>

    <div class="field form-group">
      <%= f.label :phone_number, class: "control-label" %><br />
      <%= f.telephone_field :phone_number, class: "form-control" %>
    </div>

    <div class="field form-group">
      <%= f.label :company_name, class: "control-label" %><br />
      <%= f.text_field :company_name, class: "form-control" %>
    </div>

    <div class="field form-group">
      <%= f.label :company_address, class: "control-label" %><br />
      <%= f.text_field :company_address, class: "form-control" %>
    </div>

    <div class="field form-group">
      <%= f.label :company_city, class: "control-label" %><br />
      <%= f.text_field :company_city %>
    </div>

    <div class="field form-group">
      <%= f.label :company_state, class: "control-label" %><br />
      <%= f.text_field :company_state, class: "form-control" %>
    </div>

    <div class="field form-group">
      <%= f.label :company_zip, class: "control-label" %><br />
      <%= f.number_field :company_zip, class: "form-control" %>
    </div>

    <div class="field">
      <%= f.label :company_phone, class: "control-label" %><br />
      <%= f.telephone_field :company_phone, class: "form-control" %>
    </div>

    <div class="field form-group">
      <%= f.label :onsite_contact_name, class: "control-label" %><br />
      <%= f.text_field :onsite_contact_name, class: "form-control" %>
    </div>

    <div class="field form-group">
      <%= f.label :onsite_contact_phone, class: "control-label" %><br />
      <%= f.text_field :onsite_contact_phone, class: "form-control" %>
    </div>

    <div class="field form-group">
      <%= f.label :parking_instructions, class: "control-label" %><br />
      <%= f.text_area :parking_instructions, class: "form-control" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="field form-group">
      <%= f.label :password, class: "control-label" %> <i>(leave blank if you don't want to change it)</i><br />
      <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
    </div>

    <div class="field form-group">
      <%= f.label :password_confirmation, class: "control-label" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
    </div>

    <div class="field form-group">
      <%= f.label :current_password, class: "control-label" %> <i>(we need your current password to confirm your changes)</i><br />
      <%= f.password_field :current_password, autocomplete: "off", class: "form-control" %>
    </div>

  <% if current_user.admin? %>
    <div class="field form-group">
      <%= f.label :admin, class: "control-label" %> <br />
      <%= f.check_box :admin, class: "form-control" %>
    </div>
  <% end %>

    <div class="actions">
      <%= f.submit "Update", class: "btn btn-primary" %>
    </div>
  <% end %>

  <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-info" %> 
</div>
