<div class="container">
    <%= form_for @service, :html => {:class => "form-horizontal"} do |f| %>
      <div class="row">
        <div class="col-lg-8 col-lg-offset-2">
          <% if @service.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(@service.errors.count, "error") %> prohibited this service from being saved:</h2>

              <ul>
              <% @service.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
              </ul>
            </div>
          <% end %>
        </div>
      </div>
      <div class="row">
        <div class="col-lg-8 col-lg-offset-2">
            <div class="field form-group">
              <%= f.label :service_type, class: "control-label" %>
              <%= f.select :service_type, [['Equipment Removal','Equipment Removal'],['Consignment sales','Consignment sales'],['Data Destruction & Sanitization','Data Destruction & Sanitization'],['Direct purchase','Direct purchase'],['Equipment & Product Destruction','Equipment & Product Destruction'],['Electronic Storage Media Shredding','Electronic Storage Media Shredding'],['Value Assessment','Value Assessment']], class: "form-control" %>
            </div>
            <div class="field form-group">
              <%= f.label :onsite_contact_name, class: "control-label" %>
              <%= f.text_field :onsite_contact_name, :value => @user.onsite_contact_name, class: "form-control" %>
            </div>
            <div class="field form-group">
              <%= f.label :onsite_contact_phone, class: "control-label" %>
              <%= f.text_field :onsite_contact_phone, :value => @user.onsite_contact_phone, class: "form-control" %>
            </div>
            <div class="field form-group">
              <%= f.label :company_name, class: "control-label" %>
              <%= f.text_field :company_name, :value => @user.company_name, class: "form-control" %>
            </div>
            <div class="field form-group">
              <%= f.label :address, class: "control-label" %>
              <%= f.text_field :address, :value => @user.company_address, class: "form-control" %>
            </div>
            <div class="field form-group">
              <%= f.label :city, class: "control-label" %>
              <%= f.text_field :city, :value => @user.company_city, class: "form-control" %>
            </div>
            <div class="field form-group">
              <%= f.label :state, class: "control-label" %>
              <%= f.text_field :state, :value => @user.company_state, class: "form-control" %>
            </div>
            <div class="field form-group">
              <%= f.label :zipcode, class: "control-label" %>
              <%= f.number_field :zipcode, :value => @user.company_zip, class: "form-control" %>
            </div>
            <div class="field form-group">
              <%= f.label :equipment_description, class: "control-label" %>
              <%= f.text_area :equipment_description, class: "form-control" %>
            </div>
            <div class="field form-group">
              <%= f.label :floor, class: "control-label" %>
              <%= f.text_field :floor, class: "form-control" %>
            </div>
            <div class="field form-group">
              <%= f.label :room, class: "control-label" %>
              <%= f.text_field :room, class: "form-control" %>
            </div>
            <div class="field form-group">
              <%= f.label :parking_instructions, class: "control-label" %>
              <%= f.text_area :parking_instructions, :value => @user.parking_instructions, class: "form-control" %>
            </div>
            <div class="field form-group">
              <%= f.label :day_option1, class: "control-label" %>
              <%= f.date_field :day_option1, class: "form-control" %>
            </div>
            <div class="field form-group">
              <%= f.label :day_option2, class: "control-label" %>
              <%= f.date_field :day_option2, class: "form-control" %>
            </div>
            <div class="field form-group">
              <%= f.label :time_option1, class: "control-label" %>
              <%= f.text_field :time_option1, class: "form-control" %>
            </div>
            <div class="field form-group">
              <%= f.label :time_option2, class: "control-label" %>
              <%= f.text_field :time_option2, class: "form-control" %>
            </div>
            <div class="row">
              <div class="col-lg-3 col-lg-offset-4 actions btn btn-primary text-center">
                  <%= f.submit %>
              </div>
            </div>
        </div>
      </div>
    <% end %>
</div>
